<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WInDateCalc.maui.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image
        x:Name="backgroundImage"
        Source="background"
        Aspect="AspectFill"
        HorizontalOptions="Start" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <Label Text="" x:Name="ldate"  Grid.Column="0" Grid.Row="0"  TextColor="White" />
        <DatePicker x:Name="data" Grid.Row="0" Grid.Column="1"  TextColor="White" />
        <Button Text="Calcola" x:Name="bok"  Clicked="calcola_Click" Grid.Row="1" Grid.Column="1" Opacity="0.5" />
        <Button x:Name="binfo" Text="Informazioni" Clicked="info_Click" Grid.Row="1" Grid.Column="0" Opacity="0.5" />
        <Label x:Name="risultato" Text=""  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" TextColor="White" />
    </Grid>
</ContentPage>
