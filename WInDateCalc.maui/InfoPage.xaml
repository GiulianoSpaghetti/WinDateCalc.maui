<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WInDateCalc.maui.InfoPage"
             Title="InfoPage">
    <VerticalStackLayout>
        <Label Text="Informazioni" FontSize="Title"/>
        <Label Text="Autore: Giulio Sorrentino" />
        <Label Text="Licenza: GPL v3 o, secondo la tua opinione, qualsiasi versione successiva." />
        <Button Margin="0,10,0,0" Text="Learn more"
                       Clicked="OnSito_Click"
                        BackgroundColor="{StaticResource Primary}"
                        />
    </VerticalStackLayout>
</ContentPage>